# Target Device & Architecture Config
CONFIG_TARGET_mediatek=y
CONFIG_TARGET_mediatek_mt798x=y
CONFIG_TARGET_mediatek_mt798x_DEVICE_360_t7=y
CONFIG_TARGET_BOARD="mediatek"
CONFIG_TARGET_SUBTARGET="mt798x"
CONFIG_TARGET_PROFILE="DEVICE_360_t7"
CONFIG_TARGET_ARCH_PACKAGES="aarch64_cortex-a53"
CONFIG_ARCH="aarch64"
CONFIG_ARCH_PACKAGES="aarch64_cortex-a53"
CONFIG_CPU_TYPE="cortex-a53"

# Firmware & Kernel Version
CONFIG_IMMORTALWRT_VERSION="24.10"
CONFIG_IMMORTALWRT_RELEASE="24.10"
CONFIG_KERNEL_VERSION="5.4"
CONFIG_KERNEL_PATCHVER="5.4"
CONFIG_KERNEL_TESTING_PATCHVER=""

# Root Filesystem Config
CONFIG_TARGET_ROOTFS_SQUASHFS=y
CONFIG_TARGET_ROOTFS_JFFS2=n
CONFIG_TARGET_ROOTFS_EXT4=n
CONFIG_TARGET_ROOTFS_PARTSIZE=100
CONFIG_SQUASHFS_BLOCK_SIZE=256
CONFIG_SQUASHFS_COMPRESSION_LZ4=y
CONFIG_SQUASHFS_COMPRESSION_ZLIB=n
CONFIG_SQUASHFS_COMPRESSION_XZ=n
CONFIG_TARGET_ROOTFS_FAT32=n

